@model Location

@section title{
    <title>Ajouter une location</title>
}
<form action="#" method="post">
    <div class="form-group">
        <label asp-for="date_debut"></label>
        <input asp-for="date_debut" class="form-control" />
        <span asp-validation-for="date_debut"></span>
    </div>
    <div class="form-group">
        <label asp-for="date_fin"></label>
        <input asp-for="date_fin" class="form-control" />
        <span asp-validation-for="date_fin"></span>
    </div>
    <div class="form-group">
        <label asp-for="prixjour"></label>
        <input asp-for="prixjour" class="form-control" />
        <span asp-validation-for="prixjour"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Nom du client</label>
        <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
    </div>

    <div class="form-group">
        <input type="submit" value="add an Location" />

    </div>

</form>