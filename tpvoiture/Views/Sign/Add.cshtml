@model Utilisateur
@section title{
    <title>ajouter un utilisateur</title>
}
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
<form method="post" action="#">
    <div class="form-group">

        <label asp-for="Nom"></label>
        <input asp-for="Nom" class="form-control" />
        <span asp-validation-for="Nom"></span>
    </div>
    <div class="form-group">

        <label asp-for="Prenom"></label>
        <input asp-for="Prenom" class="form-control" />
        <span asp-validation-for="Prenom"></span>
    </div>
    <div class="form-group">

        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username"></span>
    </div>
    <div class="form-group">

        <label asp-for="Password"></label>
        <input type="password" asp-for="Password" class="form-control" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">

        <label asp-for="RecPassword"></label>
        <input type="password" asp-for="RecPassword" class="form-control" />
        <span asp-validation-for="RecPassword"></span>
    </div>
    <input type="submit" value="ajouter un utilisateur" onclick="return confirm('are u sure about those informations?')" />


</form>